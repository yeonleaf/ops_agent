# OAuth2 인증 서버 설정
# 이 파일을 .env로 복사하여 사용하세요

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8002/auth/callback

# Microsoft OAuth 설정
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# Kakao OAuth 설정
KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8002/auth/kakao/link/callback

# Slack OAuth 설정
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URL=http://localhost:8002/auth/slack/link/callback

# Slack Bot 설정 (Event API용)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# 서버 설정
OAUTH_SERVER_PORT=8000
MCP_SERVER_PORT=8505
FRONTEND_URL=http://localhost:8501

# 보안 설정
SESSION_SECRET_KEY=your-super-secret-session-key-here
COOKIE_DOMAIN=localhost
SECURE_COOKIES=true
